@model WelnessWebsite.Models.DailyWorkout

@{
    ViewData["Title"] = "Create";
}


<style>
    body {
        background: linear-gradient(to top, #0F0E0E 40%, #6C809A);
        font-family: Arial, sans-serif;
        margin: auto;
        padding: 0;
        color: white;
    }

    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }


    .container {
        max-width: 400px;
        margin: 20px auto;
        padding: 30px;
        background: linear-gradient(to bottom, #0F0E0E 40%, #6C809A);
        border-radius: 5px;
        box-shadow: 0 10px 10px rgba(0, 0, 0, 1.1);
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
    }

    label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .form-control {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 350%;
        box-sizing: border-box;
        font-size: 14px;
    }

    button {
        width: 100%;
        padding: 10px;
        background-color: #2B9720;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button:hover {
            background-color: #45a049;
        }
  

  

</style>
<body></body>
<h1>Create</h1>

<h4>DailyWorkout</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DateTime" class="control-label"></label>
                    <input asp-for="DateTime" class="form-control" />
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <br/>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>