<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Welness Website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navBar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WelnessWebsite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <a class="navbar-brand" href="#">Workout Website</a>
            <ul class="nav-menu">
                <li><a href="/">Home</a></li>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="#">Log out</a></li>
                }
                else
                {
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <li><a href="/DailyWorkouts">Workout</a></li>
                        <li><a href="/DailyNutritions/Index">Nutrition</a></li>
                        <li><a href="/users/details">Account</a></li>
                        <li><a href="/home/logout">Log out</a></li>
                    
                    }
                    else
                    {
                        <li><a href="/users">Log in</a></li>
                        <li><a href="/users/create">Register</a></li>
                    }
                }
            </ul>
            <button class="navbar-toggler" type="button" onclick="toggleMenu()">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

