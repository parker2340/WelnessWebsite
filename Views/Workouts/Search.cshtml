@model List<Workout>

<h2>Search Results</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Muscle</th>
                <th>Difficulty</th>
                <th>Instructions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var workout in Model)
            {
                <tr>
                    <td>@workout.type</td>
                    <td>@workout.muscle</td>
                    <td>@workout.dificulty</td>
                    <td>@workout.instructions</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}

<a asp-action="Index" class="btn btn-primary">Back to List</a>