@model List<Workout>

<h2>Search Workouts</h2>

@using (Html.BeginForm("Search", "Workouts", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("muscle", "Muscle", htmlAttributes: new { @class = "control-label" })
        @Html.TextBox("muscle", null, new { @class = "form-control" })
        @Html.ValidationMessage("muscle", "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
}

@if (Model != null && Model.Any())
{
    <h3>Search Results</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Muscle</th>
                <th>Difficulty</th>
                <th>Instructions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var workout in Model)
            {
                <tr>
                    <td>@workout.Name</td>
                    <td>@workout.type</td>
                    <td>@workout.muscle</td>
                    <td>@workout.dificulty</td>
                    <td>@workout.instructions</td>
                </tr>
            }
        </tbody>
    </table>
}